int	iKeyID

float fScale

begin Function {iKeyID}

	if eval !MenuMode
		fScale = GetUIFloatAlt "HUDMainMenu\SimpleMinimap\_MapScale"
		if eval fScale < 1.5
			fScale += 0.25
			SetUIStringAlt "HUDMainMenu\SimpleMinimap\InfoText\string" "%.2fx" fScale
			SetUIFloatAlt "HUDMainMenu\SimpleMinimap\_MapScale" fScale
			SetUIFloatAlt "HUDMainMenu\SimpleMinimap\_MapOriginX" -999999
		endif
		SetUIFloatGradual "HUDMainMenu\SimpleMinimap\InfoText\alpha" 400 0 0.5
	endif

end