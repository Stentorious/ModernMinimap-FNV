<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>Modern Minimap</moduleName>
	<requiredInstallFiles>
		<folder source="Required" destination="" />
	</requiredInstallFiles>
	<installSteps order="Explicit">
		<installStep name="Modern Minimap">
			<optionalFileGroups order="Explicit">
				<group name="Version" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="Lite">
							<description>Select if you want the Lite Version of Modern Minimap.&#13;&#10;
 - NPC, Creature, Door, Quest Icons
 - Limited Configuration</description>
							<files>
								<folder source="Main Files\Lite" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional" />
							</typeDescriptor>
						</plugin>
						<plugin name="Full">
							<description>Select if you want the Full Version of Modern Minimap.&#13;&#10;
 - Full Icon Suite
 - KEYWORDs Support
 - In Depth Configuration
 - REQUIRES: ySI - Sorting Icons</description>
							<files>
								<folder source="Main Files\Full" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Recommended" />
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
				<group name="Icon Add-on" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="Default">
							<description>Install white versions of the add-on icons.&#13;&#10;
 - Door Icon (Interior)
 - Door Icon (Exterior)</description>
							<files>
								<folder source="Conditional\Icon Addon (Default)" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Colorful">
							<description>Install colorful versions of the add-on icons.&#13;&#10;
 - Door Icon (Interior)
 - Door Icon (Exterior)</description>
							<files>
								<folder source="Conditional\Icon Addon (Color)" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>